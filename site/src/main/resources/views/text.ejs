<% include head %>
<div class='text'>
  <% text.find('./div1').forEach(function(div) { %>
    <% var lineNumber = 1 %>
    <section class="<%= div.attr('type').value() %>">
      <% div.find('./p').forEach(function(p) { %>
        <div class="paragraph">
          <% p.find('./l').forEach(function(l, i) { %>
            <div class='line'>
              <div class='row'>
                <div class='span1'><a class='line-number'><%= lineNumber++ %></a></div>
                <div class='words span5'>
                  <% annotator.annotate(l.text()).forEach(function(annotation) { %>
                    <span data-lemma='<%= annotation.lemma %>' data-sentence-id='<%= annotation.sentenceId %>' data-id='<%= annotation.id %>' data-parent-id='<%= annotation.parentId %>'
                    data-part-of-speech='<%= annotation.partOfSpeech %>'
                    data-person='<%= annotation.person %>'
                    data-number='<%= annotation.number %>'
                    data-tense='<%= annotation.tense %>'
                    data-mood='<%= annotation.mood %>'
                    data-voice='<%= annotation.voice %>'
                    data-gender='<%= annotation.gender %>'
                    data-case='<%= annotation.case %>'
                    data-degree='<%= annotation.degree %>'
                    data-relation='<%= annotation.relation %>'>
                    <%= annotation.form %>
                  </span>
                  <% }) %>
                </div>
                <% if (i == 0) { %>
                  <div class="span1"><a class="edit" data-xml="<%= p %>" data-xpath="<%= p.path() %>">[edit]</a></div>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% }) %>
    </section>
  <% }) %>
</div>
<div class='info-pane'>
  <div class="container span5">
    <h4></h4>
    <h5></h5>
    <div class="content">
    </div>
    <form class="edit" method="POST" action="/pid/<%= name %>">
      <input type="hidden" name="_method" value="patch" />
      <textarea class="input-block-level" rows=20></textarea>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn">Cancel</button>
      </div>
    </form>
  </div>
</div>
<div class='well info-well prototype'>
  <h4></h4>
  <h5></h5>
  <div class='content'></div>
</div>
<% include foot %>